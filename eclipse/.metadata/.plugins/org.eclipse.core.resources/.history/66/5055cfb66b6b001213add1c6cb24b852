ifneq (,)
This Makefile requires GNU Make.
endif

bin_dir = ../../bin/
src_dir = ./

CXXFLAGS =	-O2 -g -Wall -fmessage-length=0

OBJS =		DisplayImage.o

lflags =		-lopencv_core -lopencv_imgproc -lopencv_highgui -lopencv_ml -lopencv_video -lopencv_features2d

TARGET =	DisplayImage

$(TARGET):	$(OBJS)
	$(CXX) -o $(TARGET) $(OBJS) $(lflags)

all:	$(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)
